<theme>
	<formatVersion>4</formatVersion>
	
	<view name="system">
		<image name="background" extra="true">
				<size>1 0.5</size>
				<tile>true</tile>
				<path>./_inc/system_and.png</path>
				<tile>false</tile>
			</image>

		<image name="logo">
			<path>./_inc/system.svg</path>
		</image>
	</view>

	<!-- BOX LOGO  -->
		<image name="logo_helper" extra="true">
			<path>./../art/arcand.png</path>
			<origin>0.2 0.5</origin>
			<pos>0.6 0.8</pos>
			<size>0.4 0.20</size>
			
		</image>

		<view name="system, basic">
		<image name="logo">
			<path>./_inc/system.svg</path>
			<pos>0.10 0.10</pos>			
			<origin>0 0</origin>
			<size>0.3 0.10</size>
		</image>

		</view>
	
	<view name="detailed">
		<image name="logo">
			<path>./_inc/system.svg</path>
			<pos>0.10 0.10</pos>			
			<origin>0 0</origin>
			<size>0.3 0.10</size>
		</image>

		<textlist name="gamelist">
				<selectedColor>7adbff</selectedColor>
				<primaryColor>ffffff</primaryColor>
                <fontPath>./../_res/fonts/TitilliumWeb-SemiBold.ttf</fontPath>
                <pos>0.71 0.163</pos>
                <size>0.27 0.70</size>
                <fontSize>0.045</fontSize>
                <lineSpacing>1.40</lineSpacing>
                <horizontalMargin>0.010</horizontalMargin>
                <alignment>left</alignment>
                <forceUppercase>1</forceUppercase>
                <selectorHeight>0.065</selectorHeight>
            </textlist>
         <image name="md_image">
				<pos>0.03 0.23</pos>
				<origin>0 0</origin>
				<size>0.35 0.50</size>
			</image>
		<text name="rating_label" extra="true">
				<pos>0.45 0.25</pos>
				<text>Rating</text>
				<color>00ffd9</color>
				<fontPath>./../art/TinyUnicode.ttf</fontPath>
				<forceUppercase>1</forceUppercase>
				<fontSize>0.05</fontSize>
				<size>0.25 0.0333333333333333</size>
			</text>
			
			<rating name="md_rating">
				<pos>0.45 0.30</pos>
				<size>0.0166666666666667 0.0296296296296296</size>		
				<filledPath>./../art/heart_filled.png</filledPath>
				<unfilledPath>./../art/heart_empty.png</unfilledPath>
			</rating>

			<text name="releasedate_label" extra="true">
				<pos>0.45 0.36</pos>
				<text>Relase D.</text>
				<color>00ffd9</color>
				<fontPath>./../art/TinyUnicode.ttf</fontPath>
				<forceUppercase>1</forceUppercase>
				<fontSize>0.05</fontSize>
				<size>0.25 0.0333333333333333</size>
			</text>

			<datetime name="md_releasedate">
				<color>969696</color>
				<forceUppercase>0</forceUppercase>
				<fontPath>./art/Cabin-Bold.ttf</fontPath>
				<fontSize>0.045</fontSize>
				<pos>0.45 0.40</pos>
				<size>0 0.033</size>
				
			</datetime>

	</view>





<feature supported="video">

		<view name="video">

			
			<video name="md_video">
				<pos>0.41 0.60</pos>			
				<origin>0 0</origin>
				<size>0.3 0.3</size>
				<delay>0.2</delay>
				<default></default>
				<showSnapshotNoVideo>true</showSnapshotNoVideo>
				<showSnapshotDelay>false</showSnapshotDelay>
			</video>

			<image name="md_marquee">
				<pos>0.41 0.49</pos>
				<origin>0 0</origin>
				<size>0.3 0.10</size>
			</image>

			<image name="md_image">
				<pos>0.03 0.23</pos>
				<origin>0 0</origin>
				<size>0.35 0.50</size>
			</image>

			<image name="bottom2" extra="true">
				<pos>0.55 0.01</pos>
				<size>0.330 0.160</size>
				<path>./../art/arcand.png</path>
				<tile>false</tile>
				<!--<rotation>-10</rotation>-->
			</image>

			<textlist name="gamelist">
				<selectedColor>7adbff</selectedColor>
				<primaryColor>ffffff</primaryColor>
                <fontPath>./../_res/fonts/TitilliumWeb-SemiBold.ttf</fontPath>
                <pos>0.71 0.163</pos>
                <size>0.27 0.70</size>
                <fontSize>0.045</fontSize>
                <lineSpacing>1.40</lineSpacing>
                <horizontalMargin>0.010</horizontalMargin>
                <alignment>left</alignment>
                <forceUppercase>1</forceUppercase>
            </textlist>

            <text name="rating_label" extra="true">
				<pos>0.45 0.25</pos>
				<text>Rating</text>
				<color>00ffd9</color>
				<fontPath>./../art/TinyUnicode.ttf</fontPath>
				<forceUppercase>1</forceUppercase>
				<fontSize>0.05</fontSize>
				<size>0.25 0.0333333333333333</size>
			</text>
			
			<rating name="md_rating">
				<pos>0.45 0.30</pos>
				<size>0.0166666666666667 0.0296296296296296</size>		
				<filledPath>./../art/heart_filled.png</filledPath>
				<unfilledPath>./../art/heart_empty.png</unfilledPath>
			</rating>

			<text name="releasedate_label" extra="true">
				<pos>0.45 0.36</pos>
				<text>Relase D.</text>
				<color>00ffd9</color>
				<fontPath>./../art/TinyUnicode.ttf</fontPath>
				<forceUppercase>1</forceUppercase>
				<fontSize>0.05</fontSize>
				<size>0.25 0.0333333333333333</size>
			</text>

			<datetime name="md_releasedate">
				<color>969696</color>
				<forceUppercase>0</forceUppercase>
				<fontPath>./art/Cabin-Bold.ttf</fontPath>
				<fontSize>0.045</fontSize>
				<pos>0.45 0.40</pos>
				<size>0 0.033</size>
				
			</datetime>
			

		</view>

	</feature>

</theme>
