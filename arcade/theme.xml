<theme>
	<formatVersion>4</formatVersion>
	<include>./../theme.xml</include>

	<view name="system">
		<image name="background" extra="true">
				<size>1 0.5</size>
				<tile>true</tile>
				<path>./_inc/system_and.png</path>
				<tile>false</tile>
			</image>

		<image name="logo">
			<path>./_inc/system.svg</path>
		</image>

		<image name="bottom3" extra="true">
            <path>./../art/zanac_logo.png</path>
            <origin>0.2 0.5</origin>
            <pos>0.2 0.87</pos>
            <size>0.33 0.13</size>
        </image>

		<image name="bottom2" extra="true">
            <path>./../art/myzar.png</path>
            <origin>0.2 0.5</origin>
            <pos>0.1 0.74</pos>
            <size>0.33 0.13</size>
            
        </image>

	</view>

		
	
	<view name="system, basic, detailed, video">
		<image name="logo">
			<path>./_inc/system.svg</path>
		</image>

		<textlist name="gamelist">
				<selectorColor>001B9D</selectorColor>
				<selectedColor>ffffff</selectedColor>
				<primaryColor>ffffff</primaryColor>
				<secondaryColor>7a6161</secondaryColor>
				<forceUppercase>1</forceUppercase>
				<horizontalMargin>0.00</horizontalMargin>
				<fontSize>0.045</fontSize>
				<size>0.38 0.69</size>
			</textlist>

			<image name="md_marquee">
				<pos>0.48 0.18</pos>
				<origin>0 0</origin>
				<size>0.45 0.10</size>
			</image>

			<image name="md_image">
				<pos>0.5 0.30</pos>			
				<origin>0 0</origin>
				<size>0.4 0.6</size>
				<delay>0.2</delay>
				<default></default>
				<showSnapshotNoVideo>true</showSnapshotNoVideo>
				<showSnapshotDelay>false</showSnapshotDelay>
			</image>
	</view>





<feature supported="video">

		<view name="video">

			<video name="md_video">
				<pos>0.5 0.30</pos>			
				<origin>0 0</origin>
				<size>0.4 0.6</size>
				<delay>0.2</delay>
				<default></default>
				<showSnapshotNoVideo>true</showSnapshotNoVideo>
				<showSnapshotDelay>false</showSnapshotDelay>
			</video>

			<image name="md_marquee">
				<pos>0.48 0.18</pos>
				<origin>0 0</origin>
				<size>0.45 0.10</size>
			</image>


			<image name="bottom2" extra="true">
				<pos>0.55 0.01</pos>
				<size>0.330 0.160</size>
				<path>./../art/arcand.png</path>
				<tile>false</tile>
				<!--<rotation>-10</rotation>-->
			</image>

			<text name="developer_label" extra="true">
					<pos>0.050 0.840</pos>
					<text>Developer:</text>
					<color>00ffd9</color>
					<fontPath>./../art/TinyUnicode.ttf</fontPath>
					<forceUppercase>1</forceUppercase>
					<fontSize>0.07</fontSize>
					<size>0.25 0.0333333333333333</size>
				</text>

			<text name="md_developer">
				<pos>0.050 0.879</pos>
				<color>ffffff</color>
				<fontPath>./../art/TinyUnicode.ttf</fontPath>
				<forceUppercase>1</forceUppercase>
				<fontSize>0.07</fontSize>
				<alignment>left</alignment>
				<!--<size>0.40 0.038</size>-->
			</text>	

			<textlist name="gamelist">
				<selectorColor>001B9D</selectorColor>
				<selectedColor>ffffff</selectedColor>
				<primaryColor>ffffff</primaryColor>
				<secondaryColor>7a6161</secondaryColor>
				<forceUppercase>1</forceUppercase>
				<horizontalMargin>0.00</horizontalMargin>
				<fontSize>0.045</fontSize>
				<size>0.38 0.69</size>
			</textlist>

			

		</view>

	</feature>

</theme>