<theme>
	<formatVersion>4</formatVersion>
	
	        <theme>
			    <formatVersion>4</formatVersion>
			    <include>./_res/colorsets/cygnus.xml</include>
			    <include>./_res/templates/simpleart-nometa.xml</include>
			</theme>
	

	<view name="system">
		<image name="background" extra="true">
				<size>1 0.5</size>
				<tile>true</tile>
				<path>./_inc/system_and.png</path>
				<tile>false</tile>
			</image>

		<image name="logo">
			<path>./_inc/system.svg</path>
		</image>


		
        <image name="logo_helper" extra="true">
            <path>./art/arcand.png</path>
            <origin>0.2 0.5</origin>
            <pos>0.6 0.8</pos>
            <size>0.4 0.20</size>
            
        </image>


	</view>

	
		<image name="logo_helper" extra="true">
			<path>./../art/arcand.png</path>
			<origin>0.2 0.5</origin>
			<pos>0.6 0.8</pos>
			<size>0.4 0.20</size>
			
		</image>

	
	<view name="system, basic, detailed, video">
		<image name="logo">
			<path>./_inc/system.svg</path>
		</image>

		
	</view>





<feature supported="video">

		<view name="video">

			<image name="background" >
				<tile>false</tile>
				<pos>0.010 0</pos>
				<origin>0 0</origin>
				<size>1 1</size>
				<path>./art/c64_d_.png</path>
			</image>

			<image name="logo">
				<path>./art/system.svg</path>
				<pos>0.700 0.864</pos>
				<maxSize>0.460 0.126</maxSize>
				<origin>0.5 0.5</origin>
			</image>

			
			<textlist name="gamelist">
				<selectorColor>1c1c1c</selectorColor>
				<selectedColor>ffffff</selectedColor>
				<primaryColor>7373ff</primaryColor>
				<secondaryColor>7a6161</secondaryColor>
				<fontPath>./../art/C64.ttf</fontPath>
				<forceUppercase>1</forceUppercase>
				<pos>0.032 0.310</pos>
				<size>0.460 0.500</size>
				<alignment>left</alignment>
				<horizontalMargin>0.00</horizontalMargin>
				<fontSize>0.03</fontSize>
				<scrollSound>./art/scroll.wav</scrollSound>
			</textlist>

			<video name="md_video">
				<pos>0.57 0.35</pos>			
				<origin>0 0</origin>
				<!--<maxSize>0.4 0.6</maxSize> quasi OK -->
				<size>0.28 0.40</size>
				<delay>1</delay>
				<default>./../_res/images/static.mp4</default>
				<showSnapshotNoVideo>true</showSnapshotNoVideo>
				<showSnapshotDelay>true</showSnapshotDelay>
			</video>

			<image name="md_marquee">
				<pos>0.50 0.23</pos>
				<origin>0 0</origin>
				<!--<maxSize>1 0.099</maxSize> quasi ok -->
				<size>0.40 0.10</size>
			</image>

			<text name="rating_label" extra="true">
					<pos>0.56 0.030</pos>
					<text>@AndreaMav 2020</text>
					<color>0000AA</color>
					<fontPath>./../art/C64.ttf</fontPath>
					<forceUppercase>1</forceUppercase>
					<fontSize>0.03</fontSize>
					<size>0.40 0.008</size>
				</text>

			<text name="md_lbl_players">
                        <fontPath>./../_res/fonts/AdobeBlank.ttf</fontPath>
                        <pos>1 0</pos>
                        <size>0.001 0.001</size>
                    </text>

                    <text name="md_players, md_genre, md_developer, md_publisher">
                        <fontPath>./../_res/fonts/AdobeBlank.ttf</fontPath>
                        <pos>1 0</pos>
                        <size>0.001 0.001</size>
                    </text>

                    <datetime name="md_releasedate, md_lastplayed">
                        <fontPath>./../_res/fonts/AdobeBlank.ttf</fontPath>
